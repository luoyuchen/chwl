/*pages/travel/travel.wxss*/
.container{
    width:100%
}
.container .banner{
    width:100%;
    height:400rpx
}
.container .banner .bannerSwiper{
    width:100%;
    height:100%
}

/*热门*/
.container .hot{
    margin-top:20rpx;
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: space-around;
    
   
}
.hot image{width: 100%;height: 100%}
.headLineSwiper{
  width: 70%;
  height: 100%;
  line-height: 100rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hoticon{
    width:20%;
    height: 100%;
}
.hotimg{
    width: 100%;
    height: 100%
}

/*四季*/
.container .season{
    width: 100%;
    height: 100%;
    margin-top: 15rpx;
    display: flex;
    justify-content: space-around
}
.inner{
    width: 49%;
    height: 250rpx;
    position: relative;
}
.inner text{
    font-family: Microsoft YaHei;
    font-size: 30px;
    color: white;
    position: absolute;
    width: 100%;
    text-align: center;
    line-height: 250rpx;
    /*text-shadow:#eb4714 1px 0 0,#eb4714 0 1px 0,#eb4714 -1px 0 0,#eb4714 0 -1px 0;*/
    filter: Glow(color=#000, strength=1);
}

/*w文字伪类*/
.text{
  position: relative;
  opacity: 0.9;
  
}
.text:before{
    content: "";
    position: absolute;
    top:10%;
    left: 10%;
    width: 80%;
    height: 3px;
    background: #fff;
    opacity: 0.6
}
.text:after{
    content: "";
    position: absolute;
    
    top:90%;
    left: 10%;
    width: 80%;
    height: 3px;
    background: #fff;
    opacity: 0.6
}
